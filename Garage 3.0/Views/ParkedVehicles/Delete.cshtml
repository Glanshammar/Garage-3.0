@model Garage_3._0.Models.ParkedVehicle
@{
    ViewData["Title"] = "Check Out Vehicle";
}

<div class="container-fluid py-3">
    <h1>Check Out Vehicle</h1>
    <h4 class="text-muted mb-4">Are you sure you want to check out this vehicle?</h4>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.RegistrationNumber)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.RegistrationNumber)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Model)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Model)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Brand)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Brand)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Color)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Color)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ArrivalTime)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ArrivalTime)
                </dd>
                <dt class="col-sm-2">
                    Parking Cost
                </dt>
                <dd class="col-sm-10">
                    <span class="badge bg-success">@Html.DisplayFor(model => model.ParkingCost) kr</span>
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-success">Confirm Check Out</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
            </form>
        </div>
    </div>
</div>
